@using Microsoft.Extensions.Localization
@inject IStringLocalizer<NavMenu> langLoc

<MudPaper Width="250px" Class="py-3" Elevation="0">
    <MudNavMenu Color="Color.Tertiary">
        <MudNavLink Match="NavLinkMatch.All" Href="">@langLoc["Index"]</MudNavLink>
        <MudNavLink Href="Currency">@langLoc["Currency"]</MudNavLink>
        <MudNavLink Href="FileAccess">@langLoc["FileAccess"]</MudNavLink>
        <MudNavLink Href="setting">@langLoc["Setting"]</MudNavLink>
    </MudNavMenu>
</MudPaper>